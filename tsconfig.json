{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "isolatedModules": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
      "moduleResolution": "node"
    },
    "include": ["src/**/*", "module.d.ts", "vite-env.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
  